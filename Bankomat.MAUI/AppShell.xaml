<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Bankomat.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Bankomat.MAUI"
    xmlns:views="clr-namespace:Bankomat.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Bankomat.MAUI"
    x:DataType="local:AppShell">

    <TabBar>
        <Tab Title="Loading page">
            <ShellContent ContentTemplate="{DataTemplate views:LoadingPage}"
                          Shell.NavBarIsVisible="True"/>
        </Tab>
        <Tab Title="Main page">
            <ShellContent ContentTemplate="{DataTemplate views:MainView}"
                          Shell.NavBarIsVisible="True"/>
        </Tab>
        <Tab Title="Admin page">
            <ShellContent ContentTemplate="{DataTemplate views:AdminPanelView}"
                          Shell.NavBarIsVisible="True"/>
        </Tab>

    </TabBar>


</Shell>